# ----------------------------------------
# Supabase Configuration
# ----------------------------------------

# The base URL of your Supabase project
SUPABASE_URL=YOUR_SUPABASE_URL_HERE

# Public key (publishable key) — safe for frontend use
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_PUBLISHABLE_KEY_HERE

# Secret key (service role) — backend only, NEVER expose publicly
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE


# ----------------------------------------
# Telegram Bot
# ----------------------------------------

# Bot token from BotFather
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE


# ----------------------------------------
# Gemini AI
# ----------------------------------------

# Google Gemini API key from Google AI Studio
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE


# ----------------------------------------
# Webhook Configuration
# ----------------------------------------

# Replace with your Render or production URL after deployment
WEBHOOK_URL=https://your-render-app.onrender.com/webhook

# Local development port
PORT=3000